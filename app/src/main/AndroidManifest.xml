<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tropfacil">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        tools:ignore="MissingClass,UnusedAttribute"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.Tropfacil_project">
        <activity
            android:name=".mycourses.view.Video_course_activity"
            android:exported="false" />
        <activity
            android:name=".userstatprofile.view.UserStatsProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Dashboard"
            android:exported="false" />

        <activity
            android:name=".ui.allusertypes.auth.welcome.Welcome_Screen"
            android:exported="false" />
        <activity
            android:name=".ui.allusertypes.auth.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity android:name=".main.view.MainActivity" />
        <activity
            android:name=".search.view.SearchActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".notificaions.view.NotificationsActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".message.view.MessageActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".CompletedCourseActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".RateReviewActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".badge.view.BadgeActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".AuthActivity" />
        <activity android:name=".ui.allusertypes.auth.login.LoginFragment" />
        <activity android:name=".ui.allusertypes.auth.signup.RegisterFragment" />
        <activity android:name=".ui.allusertypes.auth.forgotpass.ForgotPasswordFragment" />
        <activity android:name=".ui.allusertypes.auth.forgotpass.FragmentResetPassword" />
    </application>

</manifest>