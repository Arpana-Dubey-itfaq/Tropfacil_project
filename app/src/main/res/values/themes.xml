<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tropfacil_project" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="imgHeader">
        <item name="android:layout_height">@dimen/dim35</item>
        <item name="android:layout_width">@dimen/dim35</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginTop">@dimen/dim15</item>
        <item name="android:layout_marginBottom">@dimen/dim15</item>
        <item name="android:layout_marginEnd">@dimen/dim7</item>
        <item name="android:layout_marginStart">@dimen/dim7</item>


    </style>

    <style name="tvBoldCommon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/dim15</item>
        <item name="android:textSize">@dimen/dim15</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BlackText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dim_16sp</item>
        <item name="android:fontFamily">@font/light</item>
        <item name="android:background">@null</item>
        <item name="android:lines">1</item>
    </style>
    <style name="GrayDisabledButtons">
        <item name="android:layout_height">@dimen/dim50</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/dim_15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:enabled">false</item>
        <item name="android:fontFamily">@font/light</item>
        <item name="android:background">@drawable/ic_disabled_button_gray</item>
    </style>
</resources>