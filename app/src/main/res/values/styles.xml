<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="roundedImageView">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">70dp</item>

    </style>

    <style name="editTextTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="editTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:paddingTop">@dimen/_7sdp</item>
        <item name="android:paddingBottom">@dimen/_7sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="roboto_bold_text">
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="roboto_light_text">
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="roboto_medium_text">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="roboto_regular_text">
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="roboto_thin_text">
        <item name="fontFamily">@font/roboto_thin</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="customTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/customTabTextAppearance</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="tabIndicatorColor">@color/goolden</item>
        <item name="tabGravity">fill</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
    </style>
    <style name="customTabTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/robomedium</item>
        <item name="android:textSize">@dimen/_10ssp</item>

    </style>
