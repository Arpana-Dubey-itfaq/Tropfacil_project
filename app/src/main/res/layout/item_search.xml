<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_item_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardUseCompatPadding="true"
                app:cardElevation="@dimen/_2sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <ImageView
                    android:id="@+id/iv_item_profile"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    tools:src="@color/black"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/cv_item_profile"
                app:layout_constraintStart_toEndOf="@id/cv_item_profile"
                app:layout_constraintBottom_toBottomOf="@id/cv_item_profile"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="@dimen/_10sdp">
                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="CSS3 - ENI® Certifications"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/tilgreen"
                    android:fontFamily="@font/roboto_regular"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_5sdp"/>
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="L’essentiel Des Css"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_medium"
                    app:layout_constraintTop_toBottomOf="@id/tv_category"
                    app:layout_constraintStart_toStartOf="@id/tv_category"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_3sdp"/>
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Lorem ipsum dolor it. Sem calor dit mar septum calendria..."
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/hint_text"
                    android:visibility="visible"
                    android:fontFamily="@font/roboto_medium"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintStart_toStartOf="@id/tv_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_3sdp"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Time spent: 0 minutes"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9ssp"
                    android:fontFamily="@font/roboto_regular"
                    app:layout_constraintTop_toBottomOf="@id/tv_description"
                    app:layout_constraintStart_toStartOf="@id/tv_title"
                    app:drawableLeftCompat="@drawable/clock"
                    android:layout_marginTop="@dimen/_3sdp"
                    app:layout_constraintEnd_toStartOf="@id/progress_time"
                    android:drawablePadding="@dimen/_3sdp"/>
                <ProgressBar
                    android:id="@+id/progress_time"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleHorizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_time"
                    app:layout_constraintTop_toTopOf="@id/tv_time"
                    android:progress="0"
                    android:max="100"
                    />
                <TextView
                    android:id="@+id/tv_time_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/tilgreen"
                    android:textSize="@dimen/_7ssp"
                    android:fontFamily="@font/roboto_regular"
                    app:layout_constraintTop_toBottomOf="@id/progress_time"
                    app:layout_constraintStart_toStartOf="@id/progress_time"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>