<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/course_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                tools:background="@drawable/rounded_corner1"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="The vocabulary of world of work"
                app:layout_constraintTop_toBottomOf="@id/course_iv"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/robomedium"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"
                />
            <TextView
                android:id="@+id/description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Lorem ipsum dolor it. Sem calor dit mar septum calendria..."
                app:layout_constraintTop_toBottomOf="@id/title_tv"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textColor="@color/hint_text"
                android:fontFamily="@font/robotoregular"
                android:textSize="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_5sdp"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Time spent: 0 minutes"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintTop_toBottomOf="@id/description_tv"
                app:layout_constraintStart_toStartOf="@id/title_tv"
                app:drawableLeftCompat="@drawable/clock"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintEnd_toStartOf="@id/next_iv"
                android:drawablePadding="@dimen/_5sdp"/>

            <ImageView
                android:id="@+id/next_iv"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/go_arrow_green_1"
                app:layout_constraintTop_toBottomOf="@id/description_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:scaleType="centerInside"
                android:layout_marginBottom="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                />
            <ProgressBar
                android:id="@+id/progress_time"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleHorizontal"
                app:layout_constraintStart_toStartOf="@id/tv_time"
                app:layout_constraintTop_toBottomOf="@id/tv_time"
                android:progress="0"
                android:scaleY="1.2"
                android:max="100"
                android:layout_marginTop="@dimen/_3sdp"
                />
            <TextView
                android:id="@+id/tv_time_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/tilgreen"
                android:textSize="@dimen/_7ssp"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintTop_toBottomOf="@id/progress_time"
                app:layout_constraintStart_toStartOf="@id/progress_time"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>