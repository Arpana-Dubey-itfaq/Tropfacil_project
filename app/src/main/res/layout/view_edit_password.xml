<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim10"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_border_and_background_login"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textSize="@dimen/dim13" />

    <ImageView
        android:id="@+id/show_pass_btn"
        android:layout_width="@dimen/dim40"
        android:layout_height="@dimen/dim40"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dim5"
        android:alpha=".5"
        android:onClick="ShowHidePass"
        android:padding="@dimen/dim5"
        android:src="@drawable/icon_show_password" />
</RelativeLayout>