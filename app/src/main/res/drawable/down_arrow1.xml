<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>
            <item><shape xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="10dp"
                android:shape="rectangle"

                >

                <solid android:color="#ffffff" />

                <corners
